<body>

<div class="container">
    <h1>Editor de Código HTML</h1>
    <p>Cole seu código HTML, insira o texto que você quer substituir e o novo texto, e clique em "Processar".</p>

    <div class="section">
        <label for="input-code">Código HTML Original:</label>
        <textarea id="input-code" placeholder="Cole seu código HTML completo aqui..."></textarea>
    </div>

    <div class="section">
        <label>Textos para Substituir:</label>
        <div class="replace-pair">
            <input type="text" id="find-text-1" placeholder="Texto a encontrar #1">
            <input type="text" id="replace-text-1" placeholder="Novo texto #1">
        </div>
        <div class="replace-pair">
            <input type="text" id="find-text-2" placeholder="Texto a encontrar #2">
            <input type="text" id="replace-text-2" placeholder="Novo texto #2">
        </div>
    </div>

    <div class="section">
        <div class="button-group">
            <button onclick="processCode()">Processar Código</button>
        </div>
    </div>

    <div class="section">
        <label for="output-code">Código HTML Editado:</label>
        <textarea id="output-code" readonly></textarea>
    </div>

    <div class="section download-group">
        <label for="filename">Nome do Arquivo:</label>
        <input type="text" id="filename" value="codigo_editado.html">
        <button onclick="downloadCode()">Baixar Arquivo</button>
    </div>

</div>

<script>
function processCode() {
    const originalCode = document.getElementById('input-code').value;
    const find1 = document.getElementById('find-text-1').value;
    const replace1 = document.getElementById('replace-text-1').value;
    const find2 = document.getElementById('find-text-2').value;
    const replace2 = document.getElementById('replace-text-2').value;

    let processedCode = originalCode;

    if (find1) {
        processedCode = processedCode.replaceAll(find1, replace1);
    }
    if (find2) {
        processedCode = processedCode.replaceAll(find2, replace2);
    }

    document.getElementById('output-code').value = processedCode;
}

function downloadCode() {
    const code = document.getElementById('output-code').value;
    const filename = document.getElementById('filename').value || 'codigo_editado.html';

    if (!code) {
        alert('Nenhum código para baixar. Por favor, processe o código primeiro.');
        return;
    }

    const blob = new Blob([code], { type: 'text/html' });
    const url = URL.createObjectURL(blob);

    const a = document.createElement('a');
    a.href = url;
    a.download = filename;
    document.body.appendChild(a);
    a.click();

    document.body.removeChild(a);
    URL.revokeObjectURL(url);
}
</script>

</body>
